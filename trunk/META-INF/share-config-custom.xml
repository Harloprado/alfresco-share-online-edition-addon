<alfresco-config>

	<config evaluator="string-compare" condition="DocLibCustom">   
      <dependencies> 
            	<js src="metadata-templates/zk-online-edition.js" />
            	<js src="components/online-edition/zk-online-edition-actions.js" />
      </dependencies> 
    </config>
	
	 <config evaluator="string-compare" condition="DocumentLibrary"  >
	 
	    <metadata-templates>
          <template id="default">
			<line index="10" id="date">{date}{size}</line>
			<line index="20" id="description" view="detailed">{description}</line>
			<line index="30" id="tags" view="detailed">{tags}</line>
			<line index="40" id="categories" view="detailed" evaluator="evaluator.doclib.metadata.hasCategories">{categories}</line>
			<line index="50" id="social" view="detailed">{social}</line>
		  </template>       
        	      
 	      <template id="OnlineEdition">
 	        <evaluator>zk.evaluator.doclib.action.onlineEditMimetype</evaluator>
             <line index="10" id="date" view="detailed">{date}{size}</line>
             <line index="30" id="tags" view="detailed">{tags}</line>
             <line index="20" id="OnlineEdition" evaluator="zk.evaluator.doclib.action.onlineEditMimetype">{OnlineEdition}</line>             
             <line index="30" id="social" view="detailed">{social}</line>
	      </template>
        </metadata-templates> 
	 
	 </config>
	 
	 <config evaluator="string-compare" condition="DocLibActions">
		<actions>
			<action id="zk-online-edition" type="javascript"
				label="zk.label.online.edition" icon="document-edit-online">				
				<param name="function">onActionZKEditOnline</param>				
				<permissions>
               		<permission allow="true">Write</permission>
            	</permissions>
				<evaluator>zk.evaluator.doclib.action.onlineEditMimetype</evaluator>
			</action>
		</actions>

		<actionGroups>
			<actionGroup id="document-browse">
				<action index="105" id="zk-online-edition" />
			</actionGroup>
			<actionGroup id="document-details">
				<action index="105" id="zk-online-edition" />
			</actionGroup>
		
		</actionGroups>

	</config>

</alfresco-config>   